{
	"trailingSlash": "auto",
	"routes": [
		{
			"route": "/data-api/*",
			"methods": [
				"GET"
			],
			"allowedRoles": [
				"authenticated"
			]
		},
		{
			"route": "/data-api/*",
			"methods": [
				"PUT",
				"POST",
				"PATCH",
				"DELETE"
			],
			"allowedRoles": [
				"administrators"
			]
		},
		{
			"route": "/data-api/*",
			"allowedRoles": [
				"authenticated"
			]
		},
		{
			"route": "/index.html*",
			"allowedRoles": [
				"anonymous"
			]
		}
	],
	"navigationFallback": {
		"rewrite": "index.html",
		"exclude": [
			"/images/*.{png,jpg,gif}",
			"/css/*"
		]
	},
	"globalHeaders": {
		"content-security-policy": "default-src https: 'unsafe-eval' 'unsafe-inline'; object-src 'none'"
	},
	"mimeTypes": {
		".json": "text/json"
	},
	"auth": {
		"identityProviders": {
			"customOpenIdConnectProviders": {
				"ims": {
					"registration": {
						"clientIdSettingName": "IMS_PROVIDER_CLIENT_ID",
						"clientCredential": {
							"clientSecretSettingName": "IMS_PROVIDER_CLIENT_SECRET"
						},
						"openIdConnectConfiguration": {
							"wellKnownOpenIdConfiguration": "https://ims.bentley.com/.well-known/openid-configuration"
						}
					},
					"login": {
						"nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
						"scopes": ["openid", "profile"],
						"loginParameterNames": []
					}
				}
			}
		}
	}
}
